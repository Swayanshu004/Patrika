<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')%>
    <title>Home</title>
</head>
<body>
    <%- include("./partials/header")%>
    <div class="container px-6 py-10 mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 bg-[#14213d]">
        <% blogs.forEach(blog => { %>
        <div class="rounded-lg border bg-white text-card-foreground shadow-sm" data-v0-t="card">
            <a href="/blog/<%= blog._id %>">
            <img
                src="<%= blog.coverImageURL%>"
                alt="NA"
                width="400"
                height="225"
                class="w-full h-48 object-cover rounded-t-md"
                style="aspect-ratio: 400 / 225; object-fit: cover;"
            />
            <div class="p-4">
                <h3 class="text-lg font-semibold mb-2"><%= blog.title%></h3>
                <p class="text-[#000000]/80 line-clamp-3"><%= blog.content%></p>
                <div class="flex items-center text-sm text-[#000000]/80 mt-4">
                <span class="relative flex shrink-0 overflow-hidden rounded-full w-6 h-6 mr-2">
                    <img 
                    src="<%= blog.createdBy.profileUrl%>"
                    alt="NA" 
                    class="aspect-square h-full w-full" />
                </span>
                <span><%= blog.createdBy.fullname%></span>
                </div>
            </div>
            </a>
        </div>
        <% }) %>
    </div>
</body>
</html>